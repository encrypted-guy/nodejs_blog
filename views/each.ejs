<%- include('partials/header.ejs') %>
    

<main>
    <section class="home">  

        <div class="row">
            <div class="catagorycolumn">
                <div class="card-each">
                    <% if(post) { %>
                        <h2> <%= post ? post.title : null %> </h2> 
                        <h5>posted on, <%= post.date %> BY  <a href="/user/@<%= user_info.name %>/<%= user_info._id %>"> <span class="usertag"><%= author %></span> </a></h5>
                        <img class="catimg" src="<%= post.imgurl %>" alt="">
                        <p> <%= post ? post.discription :null %> </p>
                    <% } else { null} %>
                </div>
            </div>
        </div>
    </section>

    
    <section class="recent-each">

        <div class="head-recnt">
            <h3>random uploads</h3>
        </div>

        <div class="recent-all">
            <div class="each-list">
                <% for(let i= 0; i < 4; i++) { %>
                    <div class="each-one">
                        <a href="/post/<%= randompost[i]._id %>">
                            <h4> <%=  randompost[i].title %> </h4>   
                        </a>
                        <img class="blogimgsmall" src="<%= randompost[i].imgurl %>" alt="">
                    </div>
                <% } %>
            </div>
        </div>
    </section>

</main>



<%- include('partials/footer.ejs') %>