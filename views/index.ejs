<%- include('partials/header.ejs') %>
    
    <main>
        <section class="home">  

            <div class="row">
                <div class="leftcolumn">

                    <% for(let i= 0; i < 4; i++) { %>
                        <div class="card">
                            <a href="/post/<%= posts[i]._id %>">
                                <h2><%= posts[i].title %></h2>
                            </a>
                            <h5>posted on, <%= posts[i].date %></h5>
                            <img class="blogimg" src="<%= posts[i].imgurl %>" alt="">
                            <p class="truncate"> <%= posts[i].discription %> </p>
                        </div>
                    <% } %>

                    
                </div>
                <div class="rightcolumn">
                    <div class="card-main">
                        <h3>Popular Post</h3>
                        
                        <% for(let i= 0; i < 3; i++) { %>
                            <div class="card-in">
                                <a href="/post/<%= populer[i]._id %>">
                                    <h2> <%= populer[i].title %> </h2>   
                                </a>
                                <img class="blogimgsmall" src="<%= populer[i].imgurl %>" alt="">
                                <p class="trucatepopuler"> <%= populer[i].discription %> </p>
                            </div>
                        <% } %>

                    </div>
                </div>
            </div>
        </section>

        <section class="recent">
            <div class="recent-1">
                <div class="recent-list">
                    <% for(let i= 0; i < 3; i++) { %>
                        <div class="recent-one">
                            <a href="/post/<%= populer[i]._id %>">
                                <h2><%= populer[i].title %></h2>   
                            </a>
                            <img class="blogimg" src="<%= populer[i].imgurl %>" alt="">
                            
                        </div>
                    <% } %>
                </div>
            </div>
        </section>
    </main>


<%- include('partials/footer.ejs') %>